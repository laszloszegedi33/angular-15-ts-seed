{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSources": true
    },
    "include": [
            "./app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}