{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSources": true,
        "outDir": "dist/src"
    },
    "include": [
            "./src/app/**/*",
            "./src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}